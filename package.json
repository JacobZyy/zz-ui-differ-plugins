{
  "name": "ui-differ-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "UI Differ Monorepo",
  "author": "",
  "license": "ISC",
  "keywords": [],
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "pnpm build:sequential",
    "build:sequential": "tsx scripts/build-sequential.ts",
    "build:parallel": "pnpm -r build",
    "dev": "pnpm dev:sequential",
    "dev:sequential": "tsx scripts/dev-sequential.ts",
    "dev:parallel": "pnpm -r --parallel dev",
    "dev:core": "pnpm --filter @ui-differ/core dev",
    "dev:web-tester": "pnpm --filter @ui-differ/web-tester dev",
    "dev:chrome": "pnpm --filter @ui-differ/plugin-chrome dev",
    "dev:mastergo": "pnpm --filter @ui-differ/plugin-master-go dev",
    "clean": "pnpm -r clean",
    "clean:modules": "pnpm -r clean:modules && rm -rf node_modules",
    "single-fn-test:watch": "tsx test.ts --watch"
  },
  "dependencies": {
    "@alita/chalk": "^1.1.2",
    "@ant-design/icons": "^6.0.2",
    "@tailwindcss/vite": "^4.1.13",
    "ahooks": "^3.9.5",
    "antd": "^5.27.4",
    "immer": "^10.1.3",
    "radash": "^12.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "reset-css": "^5.0.2",
    "tailwindcss": "^4.1.13",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@eslint-react/eslint-plugin": "^1.53.1",
    "@mastergo/plugin-typings": "^2.9.0",
    "@types/chrome": "^0.1.12",
    "@types/node": "^24.5.2",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@unocss/eslint-plugin": "^66.5.1",
    "@vitejs/plugin-react": "^4.7.0",
    "eslint": "^9.36.0",
    "eslint-plugin-format": "^1.0.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "lint-staged": "^16.1.6",
    "simple-git-hooks": "^2.13.1",
    "tsx": "^4.20.5",
    "typescript": "~5.8.3",
    "unocss": "^66.5.1",
    "vite": "^6.3.6"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
